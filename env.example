# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_ID=your_telegram_user_id

# Google Gemini Configuration (recommended - supports embeddings)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_ADMIN_API_KEY=your_admin_api_key_for_usage_reports
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Default LLM Provider (gemini or anthropic)
# Note: Gemini is required for embeddings/vector search
DEFAULT_LLM_PROVIDER=gemini

# Paths
SKILLS_DIR=./skills
CHROMA_PERSIST_DIR=./data/chroma
STATE_FILE=./data/state.json
